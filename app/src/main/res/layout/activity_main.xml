<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.56"
            android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/circle"
            />
            <Button
                    android:text="()"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="/"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    style="?android:attr/buttonBarButtonStyle"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" android:id="@+id/button5"
                    style="?android:attr/buttonBarButtonStyle" android:background="#F44336"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button6"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button7"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button8"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button9"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button12"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button11"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button10"
                    style="?android:attr/buttonBarButtonStyle"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button15"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button16"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button14"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:text="="
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button13"
                    style="?android:attr/buttonBarButtonStyle"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="Enter value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button18"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout" app:layout_constraintHorizontal_bias="1.0"
            app:backgroundTint="#004d40"/>
</androidx.constraintlayout.widget.ConstraintLayout>